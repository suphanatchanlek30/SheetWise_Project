generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int       @id @default(autoincrement())
  email              String    @unique
  password           String
  name               String
  role               String    @default("user")
  resetToken         String?   // Token สำหรับรีเซ็ตรหัสผ่าน
  resetTokenExpires  DateTime? // วันหมดอายุของ Token
  sheets             Sheet[]   // ฟิลด์ความสัมพันธ์กลับมายัง Sheet
  orders             Order[]   // ฟิลด์ความสัมพันธ์กลับมายัง Order
  createdAt          DateTime  @default(now())
}

model Sheet {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  price       Float
  fileUrl     String    // ลิงก์ไฟล์ PDF
  status      String    @default("pending") // pending, approved, rejected
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
  orders      Order[]   // ฟิลด์ความสัมพันธ์กลับมายัง Order
  createdAt   DateTime  @default(now())
}

model Order {
  id        Int      @id @default(autoincrement())
  userId    Int
  sheetId   Int
  amount    Float
  status    String   @default("pending") // pending, paid, failed
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  sheet     Sheet    @relation(fields: [sheetId], references: [id])
}

